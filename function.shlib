#!/bin/bash
IP="10.2."

function service(){
    sudo systemctl stop NetworkManager.service
}

# need 2 arg -> 1: name of interface 2:IP (without  fix part and mask)
function setup(){
    eth=$1
    ip=$IP$2"/24"
    ifconfig $eth
    ethtool $eth
    sudo /sbin/ifconfig $eth $ip
    echo $eth
    echo $ip
}

# need 1 arg -> 1:IP (without  fix part and mask)
function ping(){
    ip=$IP$1
    fping $ip
}
