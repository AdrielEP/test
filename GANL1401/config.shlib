# enp5s0
function config_2GEth {
    eth=enp5s0
    ip=10.2.1.86
    config $eth $ip
}
function test_2GEth {
    fping 10.2.1.86 10.2.1.21
}

# enp6s0f0
function config_10GEthBlack {
  eth=enp6s0f0
  ip=10.2.10.84
  config $eth $ip
    fping $ip 10.2.10.38
}

# enp6s0f1
function config_10GEthOrange {
  eth=enp6s0f1
  ip=10.2.11.86
  config $eth $ip
    fping 10.2.11.86 10.2.11.34
}

# Config all interfaces
function globalConf {
    config_2GEth
    sleep 0.30
    config_10GEthBlack
    sleep 0.30
    config_10GEthOrange
    sleep 0.30
    echo "Interfaces setup"
}
