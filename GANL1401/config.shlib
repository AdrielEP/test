#!/bin/bash

# eth
function config {
  #eth=enp5s0
  #ip=10.2.1.86
  eth=$1
  ip=$2

  #info
  ifconfig $eth
  ethtool $eth

  #setup
  sudo /sbin/ifconfig $eth $ip/24
}
